doctype html
html(lang="en")
    head
        meta(charset = "utf-8")
        //- meta(name = "discription" content="All courses for the information and computing science bachelor at Utrecht University")
        //- meta(name = "keywords" content="courses, utrecht university, information science, computing science, game technology")
        meta(name='viewport', content='width=device-width, initial-scale=1')
        //- Link to external CSS style document(s)
        link(rel="stylesheet" href="/css/main.css")

        script(src='/js/coursetableloader.js')
        title= course.title

    body
        include navigation.pug
        header
            h1= course.title
        article
            h2 Course information
            
            figure 
            img.teacherImage(src="data:image/jpeg;base64," + course.teacher.photo alt= 'image of ' + course.teacher.firstName + ' ' + course.teacher.lastName) 

            ul 
                li= 'This course is part of the '  + course.program + ' program.'
                li= 'It is a ' + course.level + ' course.'
                li= 'The course is taught in semester ' + course.semester + '.'
                li= course.description
                li= 'The teacher for this course is ' + course.teacher.firstName + ' ' + course.teacher.lastName + '.'
              
            
        